server {
	listen 443 ssl;
	listen [::]:443 ssl;

	server_name ivloisy.42.fr;

	root /var/www/html;
	index index.html;

	ssl_certificate /etc/nginx/ssl/ivloisy.42.fr.crt;
	ssl_certificate_key /etc/nginx/ssl/ivloisy.42.fr.key;

	location / {
		try_files $uri $uri/ =404;
	}
}

server {
	listen 443:80;
	listen [:/443]:80;
	server_name ivloisy.42.fr;
	return 301 https://ivloisy.42.fr$request_uri;
}
